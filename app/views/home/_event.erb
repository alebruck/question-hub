<div class="row">
  <div class="col-sm-8 col-sx-8 col-md-8 col-lg-8">
    <h3><%= link_to(evento.titulo, "/prova/#{evento.tipo_indice || 1}") %></h3>
    <span><%= evento.origem %></span>
    <%= link_to("Veja mais sobre esta prova", "/prova/#{evento.tipo_indice || 1}", :class => 'btn  btn-default') %>
  </div>
  <div class="col-sm-4 col-sx-4 col-md-4 col-lg-4">
    <div class="chart" data-percent="<%= evento.media %>"><%= evento.media %>%</div>
  </div>
</div>